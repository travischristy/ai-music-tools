# AI Lyrics Canvas - API Configuration
# Copy this file to .env and fill in your API credentials

# API Provider Settings
REACT_APP_AI_PROVIDER=openai
REACT_APP_API_BASE_URL=https://api.openai.com/v1
REACT_APP_API_KEY=your_api_key_here

# Model Configuration
REACT_APP_MODEL=gpt-4
REACT_APP_MAX_TOKENS=2000
REACT_APP_TEMPERATURE=0.7
REACT_APP_TIMEOUT=30000

# Generation Parameters
REACT_APP_LYRICS_TEMPERATURE=0.8
REACT_APP_LYRICS_MAX_TOKENS=1500
REACT_APP_ANALYSIS_TEMPERATURE=0.3
REACT_APP_ENHANCEMENT_TEMPERATURE=0.6

# Feature Flags
REACT_APP_USE_MOCK_API=false
REACT_APP_ENABLE_API_LOGGING=true
REACT_APP_ENABLE_CACHING=true

# Suno AI Integration (Optional)
REACT_APP_SUNO_API_KEY=your_suno_api_key_here
REACT_APP_SUNO_BASE_URL=https://api.suno.ai/v1

# Local AI Settings (for Ollama or similar)
REACT_APP_LOCAL_MODEL_URL=http://localhost:11434/v1
REACT_APP_LOCAL_MODEL_NAME=llama2
